country_shp <- getData("GADM", country = "Moldova", level = 1)



xlim <-
  c(round(country_shp@bbox[1, 1] ),
    round(country_shp@bbox[1, 2] ))  # longitude boundaries for the region of seasonerest
ylim <-
  c(round(country_shp@bbox[2, 1] ),
    # latitude boundaries for the region of seasonerest
    round(country_shp@bbox[2, 2]))
